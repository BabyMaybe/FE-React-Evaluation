{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "max-len": "off",
        "no-plusplus": "off",
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "object-curly-newline": [
            "error",
            {
                "multiline": true
            }
        ],
        "react/prop-types": "off",
        "react/jsx-one-expression-per-line": [
            2,
            {
                "allow": "literal"
            }
        ],
        "react/jsx-props-no-spreading": [
            1,
            {
                "html": "ignore"
            }
        ]
    }
}
